<%= form_with(model: record, local: true) do |form| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :year, class: 'form-label' %>
    <%= form.text_field :year, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, class: 'form-label' %>
    <%= form.text_field :user_id, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :artist_id, class: 'form-label' %>
    <%= form.text_field :artist_id, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <% if record.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', record, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if record.persisted? %>
      <%= link_to "Cancel", record, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", records_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
