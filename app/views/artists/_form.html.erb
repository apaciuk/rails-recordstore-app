<%= form_with(model: artist, local: true) do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, class: 'form-label' %>
    <%= form.text_field :user_id, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <% if artist.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', artist, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if artist.persisted? %>
      <%= link_to "Cancel", artist, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", artists_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
